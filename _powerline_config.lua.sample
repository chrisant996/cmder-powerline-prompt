--plc_prompt.lambTextColor = ansiFgBold
--plc_prompt.lambFillColor = ansiBgClrDefault

---- Symbol connecting each segment of the prompt.
--plc_prompt.leftJustSegmentSymbol =  "ÓÇ∞" -- round "ÓÇ¥" -- downslant "ÓÇ∏" -- upslant "ÓÇº"
--plc_prompt.leftJustDividerSymbol =  "ÓÇ±" -- round "ÓÇµ" -- downslant "ÓÇπ" -- upslant "ÓÇΩ"
--plc_prompt.rightJustSegmentSymbol = "ÓÇ≤" -- round "ÓÇ∂" -- downslant "ÓÇ∫" -- upslant "ÓÇæ"
--plc_prompt.rightJustDividerSymbol = "ÓÇ≥" -- round "ÓÇ∑" -- downslant "ÓÇª" -- upslant "ÓÇø"

